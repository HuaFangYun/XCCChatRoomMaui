<?xml version="1.0" encoding="utf-8" ?>
<mauiPopup:BasePopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mauiPopup="clr-namespace:MauiPopup.Views;assembly=MauiPopup"
             x:Class="XCCChatRoom.Controls.UserTelEditPopup"
             IsCloseOnBackgroundClick="True"
             HorizontalOptions="Fill"
             VerticalOptions="Fill"
             Title="UserTelEditPopup"
             ForegroundColor="Black"
             BackgroundColor="Transparent">
    <Grid
        Margin="10,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image
            x:Name="imageView"/>
        <Button
            Grid.Row="1"
            x:Name="SaveButton"
            ImageSource="download"
            Text="保存图片"
            CornerRadius="10"
            HorizontalOptions="Fill"
            VerticalOptions="Center"
            Clicked="SaveButton_Clicked"/>
    </Grid>
</mauiPopup:BasePopupPage>
<?xml version="1.0" encoding="utf-8" ?>
<mauiPopup:BasePopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mauiPopup="clr-namespace:MauiPopup.Views;assembly=MauiPopup"
             x:Class="XCCChatRoom.Controls.ErrorPopup"
             IsCloseOnBackgroundClick="False"
             HorizontalOptions="Center"
             VerticalOptions="Center"
             Title="ErrorPopup"
             ForegroundColor="Transparent"
             BackgroundColor="Transparent">
    <Border
        StrokeThickness="0"
        Padding="15"
        StrokeShape="RoundRectangle 20"
        BackgroundColor="#ffc7c7">
        <StackLayout>
            <HorizontalStackLayout>
                <Image
                    Source="caution"/>
                <Label 
                    Margin="10"
                    x:Name="DisplayTitleLabel"
                    FontSize="20"
                    Text="错误"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" 
                    TextColor="#ea4f4f"/>
            </HorizontalStackLayout>
            <Label 
                Margin="10"
                x:Name="DisplayContentLabel"
                FontSize="16"
                Text="错误内容"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                TextColor="#ea4f4f"/>
        </StackLayout>
    </Border>
</mauiPopup:BasePopupPage>